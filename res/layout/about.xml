<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:layout_gravity="center_horizontal">

    <ImageView android:src="@drawable/internode_logo"
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:layout_gravity="center_horizontal"
               android:padding="4dip"
               android:layout_weight="1"/>

    <TextView android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:layout_gravity="center_horizontal"
              android:gravity="center_horizontal"
              android:text="Anode"
              android:textSize="36sp"/>
        

    <include android:id="@+id/about_hr"
             android:layout_weight="1"
             layout="@layout/hr"/>

    <TextView android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:layout_gravity="center_horizontal"
              android:gravity="center_horizontal"
              android:text="Copyright Steve Smith (tarkasteve@gmail.com) 2010"/>

    <TextView android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:layout_gravity="center_horizontal"
              android:gravity="center_horizontal"
              android:text="This software is licensed under the GPL version 3.  Internode logo used with permission."/>


</LinearLayout>
